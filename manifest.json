{  
	"name": "server-alive",  
	"version": "0.0.1",  
	"description": "Detect server is alive or not.",
	"manifest_version": 2,
	"icons": { "128": "server-alive.png" },
	"browser_action": {  
		"default_icon": "server-alive.png" ,
		"default_title": "server-alive"
	},
	"permissions": [
		"http://*/",
		"cookies",
		"https://*/",
		"bookmarks",
		"tabs",
		"unlimitedStorage",
		"history",
		"notifications"
	],
	"browser_action": {
      "default_title": "toomao",
      "default_icon": "icon.png",
      "default_popup": "popup.html"
  	},
	"background": {
		"scripts": ["background.js"]
	}
}